<div class="row main-navigation">
    <div class="col-md-4">
        <ul class="nav nav-pills">
            {{#each plans}}
            <li class="text-capitalize{{#if isActive}} active{{/if}}"><a class="link-update" href="#{{url value}}">{{friendly value}}</a></li>
            {{/each}}
        </ul>
    </div>

    <div class="col-md-4 col-md-offset-4">
        <select class="form-control week-dropdown">
            <!-- Removed selected from the placeholder, as even without one selected, there's a default week -->
            <option value="" disabled hidden>Choose a week...</option>
            {{#each weeks}}
            <option{{#if isActive}} selected{{/if}} value="{{value}}">{{friendly value}}</option>
            {{/each}}
        </select>
    </div>
</div>